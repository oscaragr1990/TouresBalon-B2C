@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <fieldset>
                <legend>Busca tu Evento</legend>
                <div class="form-group">
                    <label class="form-control-label" for="Evento">Evento:</label>
                    <input class="form-control" type="text" name="Evento" value="" placeholder="Evento" />
                </div>
                <div class="form-group">
                    <label class="form-control-label" for="Ciudad">Ciudad:</label>
                    <input class="form-control" type="text" name="Ciudad" value="" placeholder="Ciudad" />
                </div>
                <div class="form-group">
                    <label class="form-control-label" for="Fecha">Fecha:</label>
                    <div class='input-group date' id='datetimepicker1'>
                        <input type="datetime" class="form-control" name="Fecha" />
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="submit" />
                </div>
            </fieldset>
        </form>
    </div>
    <div class="col-md-8">
        <div id="Carousel_campanya" class="carousel slide" data-ride="carousel" data-interval="1000">
            <ol class="carousel-indicators">
                <li data-target="#Carousel_campanya" data-slide-to="0" class="active"></li>
                <li data-target="#Carousel_campanya" data-slide-to="1"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="~/resource_/images/campanya/alexander-londono-322213.jpg" />
                    <div class="carousel-caption" role="option">
                        <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525028&clcid=0x409">
                            Ver
                        </a>
                    </div>
                </div>
                <div class="item">
                    <img src="~/resource_/images/campanya/marcos-moraes-16233.jpg" />
     
                    <div class="carousel-caption" role="option">
                        <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525028&clcid=0x409">
                            Ver
                        </a>
                    </div>
                </div>
            </div>

            <a class="left carousel-control" href="#Carousel_campanya" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#Carousel_campanya" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

</div>